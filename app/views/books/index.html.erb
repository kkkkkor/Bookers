<!--投稿一覧画面-->
 <p id="notice"></p>
  <h1>Books</h1>
<table>
  <thead>
    <tr>
        <th>title</th>
        <th>body</th>
    </tr>
   </thead>
  <tbody>
    <% @books.each do |list| %>
    <tr>
    <td><%= list.title %></td>
    <td><%= list.body %></td>
   <td><%= link_to "show",book_path(list.id) %></td>
   <td><%= link_to "edit",edit_book_path(list.id) %></td>
<td><%= link_to "destroy",destroy_book_path(list.id),method: :delete, "data-confirm" =>"本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit "create Book"%>
<!--<span>-->
<!-- link_to index.title, "/books/#[books:id]" %>-->
<!--</span>-->
<% end %>

